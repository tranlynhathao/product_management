mixin alert-success(time)
  - if (messages.success)
    .messages.info
      div(
        class="alert alert-success"
        show-alert
        data-time=time
      ) #{messages.success} <span close-alert>x</span>

mixin alert-error(time)
  - if (messages.error)
    div(
      class="alert alert-danger"
      show-alert
      data-time=time
    )
      | #{messages.error}
      button(class="btn btn-danger btn-sm" close-alert) <span close-alert>x</span>
