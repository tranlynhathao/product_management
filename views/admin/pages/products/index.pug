extends ../../layouts/default

block main
  h1 Product List

  table.table.table-hover.table.sm
    thead
      tr
        th Order
        th Image
        th Title
        th Price
        th Status
        th Edit

    tbody
      each item, index in products
        tr
          td #{index + 1}
          td
            img(
              src=item.thumbnail
              alt=item.title
              width="100px"
              height="auto"
            )
          td #{item.title}
          td $#{item.price}
          td
            a(
              href="#"
              class="badge text-bg-success"
            ) Active
          td
            button(class="btn btn-warning btn-sm") Edit
            button(class="btn btn-danger btn-sm ml-1") Delete
